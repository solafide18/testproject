<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Email Notification
                </h2>

                <div class="panel-toolbar ml-2">
                    <a href="/SystemAdministration/EmailNotification/Index" class="btn btn-sm btn-secondary float-right">Back to List</a>
                </div>
                <div class="panel-toolbar ml-2">
                    <button type="button" id="Save" name="Save" class="btn btn-sm btn-primary">Save</button>
                </div>
                <div class="panel-toolbar ml-2">
                    <button type="button" id="Delete" name="Delete" class="btn btn-sm btn-danger">Delete</button>
                </div>
                @*<div class="panel-toolbar ml-2">
                    <button type="button" id="Send" name="Send" class="btn btn-sm btn-primary">Send</button>
                </div>*@
                <div class="panel-toolbar ml-2">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-xl-12">
                            <form id="form-main">
                                <input type="hidden" id="id" name="id" value="@ViewBag.Id" />
                                <input type="hidden" id="email_content" name="email_content" />

                                <div class="form-group">
                                    <label class="form-label" for="email_subject">Email Subject</label>
                                    <input type="text" id="email_subject" name="email_subject" class="form-control" required>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="recipients">Email Recipients</label>
                                    <input type="text" id="recipients" name="recipients" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="table_name">Table/View Name</label>
                                    <input type="text" id="table_name" name="table_name" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="fields">Fields Name</label>
                                    <input type="text" id="fields" name="fields" class="form-control" placeholder="example: customer_name, address, phone">
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="criteria">Criteria</label>
                                    <input type="text" id="criteria" name="criteria" class="form-control">
                                </div>

                                <div class="form-group">
                                    <input type="hidden" id="delivery_schedule" name="delivery_schedule" />
                                    <label class="form-label" for="delivery_schedule">Delivery Schedule</label>
                                    <div class="class=" form-control"">
                                        <div id="date-box"></div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="email_subject">Delivery Type</label>
                                    <select id="type" name="type" class="form-control">
                                        <option selected="selected" value="OT">One Time</option>
                                        <option value="OE">On Event</option>
                                        <option value="DD">Daily</option>
                                        <option value="WWW">Weekly</option>
                                        <option value="MM">Monthly</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="criteria">Email Code</label>
                                    <input type="text" id="email_code" name="email_code" class="form-control" readonly>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="criteria">Attachment</label>
                                    <input type="text" id="attachment_file" name="attachment_file" class="form-control" readonly>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="email_content">Email Body</label>
                                    <div id="html-editor"></div>
                                </div>

                                @*<div class="form-group">
            <label class="form-label" for="variable">Email Variable</label>
            <textarea id="variable" name="variable" rows="6" class="form-control"
                      placeholder="var1=select [field_name] from [table_name/view_name] where [field_name]='Xyz';">@ViewBag.variable</textarea>
        </div>*@

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


