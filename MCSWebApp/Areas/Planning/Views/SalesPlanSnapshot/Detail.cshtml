<div class="state">
    <input name="sales_plan_snapshot_id" type="hidden" value="@ViewBag.salesPlanSnapshot.id" />
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="row mb-3">
            <div class="col">
                <div class="panel">
                    <div class="panel-hdr">
                        <h2>Sales Plan</h2>
                    </div>

                    <div class="panel-container show">
                        <div class="panel-content">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div id="sales-plan-snapshot-form"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <ul class="nav nav-mcs nav-pills pills-blue my-3" role="tablist">
                    <li class="nav-item"><a class="nav-link active" data-toggle="pill" href="#monthly-container">Monthly</a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="pill" href="#total-container">Total</a></li>
                </ul>
            </div>
            <div class="col d-flex align-items-center justify-content-end">
                <button class="btn btn-round btn-primary" id="save-snapshot-btn">Download .csv</button>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">

                <div class="tab-content py-3">
                    <!-- Monthly -->
                    <div class="tab-pane fade show active" id="monthly-container" role="tabpanel">
                    </div>

                    <!-- Year (Total) -->
                    <div class="tab-pane fade" id="total-container" role="tabpanel">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Upload file -->
<div class="modal fade" id="modal-upload-file" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload file</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <input type="file" id="fUpload" name="files" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnUpload">Upload</button>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/7.4.0/polyfill.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.2/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/exceljs/3.3.1/exceljs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.min.js"></script>
    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script defer src="~/app/areas/planning/sales_plan_snapshot/js/detail.js?_=@DateTime.Now.Ticks"></script>
}