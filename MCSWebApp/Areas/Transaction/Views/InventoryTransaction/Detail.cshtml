<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    @ViewBag.Breadcrumb
                </h2>
                <div class="panel-toolbar ml-2">
                    <button type="button" id="Save" name="Save" class="btn btn-sm btn-primary">Save</button>
                </div>
                <div class="panel-toolbar ml-2">
                    <button type="button" id="Delete" name="Delete" class="btn btn-sm btn-danger">Delete</button>
                </div>
                <div class="panel-toolbar ml-2">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-xl-12">
                            <form id="form-main">
                                <input type="hidden" id="id" name="id" value="@ViewBag.Id" />
                                <input type="hidden" id="product_id" name="product_id" />
                                <input type="hidden" id="product_name" />
                                <input type="hidden" id="uom_id" name="uom_id" />
                                <input type="hidden" id="uom_name" />
                                <input type="hidden" id="source_location_id" name="source_location_id" />
                                <input type="hidden" id="source_location_name" />
                                <input type="hidden" id="destination_location_id" name="destination_location_id" />
                                <input type="hidden" id="destination_location_name" />
                                <input type="hidden" id="accounting_period_id" name="accounting_period_id" />
                                <input type="hidden" id="accounting_period_name" />

                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="transaction_number">Transaction Number</label>
                                            <input type="text" id="transaction_number" name="transaction_number" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="transaction_datetime">Transaction DateTime</label>
                                            <input type="datetime-local" id="transaction_datetime" name="transaction_datetime" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="Product">
                                                Product
                                            </label>
                                            <select data-placeholder="Product ..." class="form-control" id="Product"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="UOM">
                                                UOM
                                            </label>
                                            <select data-placeholder="UOM ..." class="form-control" id="UOM"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="SourceLocation">
                                                Source Location
                                            </label>
                                            <select data-placeholder="Source Location ..." class="form-control" id="SourceLocation"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="DestinationLocation">
                                                Destination Location
                                            </label>
                                            <select data-placeholder="Destination Location ..." class="form-control" id="DestinationLocation"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="quantity">Quantity</label>
                                            <input type="text" id="quantity" name="quantity" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="AccountingPeriod">
                                                Accounting Period
                                            </label>
                                            <select data-placeholder="Accounting Period ..." class="form-control" id="AccountingPeriod"></select>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock
{
    <script defer src="~/app/areas/transaction/inventorytransaction/js/detail.js?_=@DateTime.Now.Ticks"></script>
}