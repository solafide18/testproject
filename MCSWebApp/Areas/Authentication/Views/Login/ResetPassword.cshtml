<div class="flex-1" style="background: url(img/svg/pattern-1.svg) no-repeat center bottom fixed; background-size: cover;">
    <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
        <div class="row">
            <div class="col-xl-12">
                <h2 class="fs-xxl fw-500 mt-4 text-white text-center">
                    Password Reset
                    <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                        Set your new password
                    </small>
                </h2>
            </div>
            <div class="col-xl-6 ml-auto mr-auto">
                <div class="card p-4 rounded-plus bg-faded">
                    <form id="form-main">
                        <input type="hidden" id="Id" value="@ViewBag.Id">

                        <div class="form-group">
                            <label class="form-label" for="NewPassword">New Password</label>
                            <input type="password" id="NewPassword" class="form-control" placeholder="New password ..." required>
                            <div class="invalid-feedback">No, you missed this one.</div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="ConfirmPassword">Confirm Password</label>
                            <input type="password" id="ConfirmPassword" class="form-control" placeholder="Confirm password ..." required>
                            <div class="invalid-feedback">No, you missed this one.</div>
                        </div>
                        <div class="row no-gutters">
                            <div class="col-md-4 ml-auto text-right">
                                <button id="btn-reset-password" type="button" class="btn btn-danger">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-block text-center text-white">
        @DateTime.Now.Year © SmartMining by&nbsp;<a href='https://pdp.ems.co.id' class='text-white opacity-40 fw-500' title='pdp.ems.co.id' target='_blank'>EMS</a>
    </div>
</div>
@section ScriptsBlock
{
    <script defer src="~/app/areas/authentication/login/js/reset_password.js?_=@DateTime.Now.Ticks"></script>
}