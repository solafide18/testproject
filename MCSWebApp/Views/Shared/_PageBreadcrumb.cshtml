<ol class="breadcrumb page-breadcrumb">
    @if (ViewBag.RootBreadcrumb != null)
    {
        <li class="breadcrumb-item">@ViewBag.RootBreadcrumb</li>
    }

    @if (ViewBag.AreaBreadcrumb != null)
    {
        <li class="breadcrumb-item">@ViewBag.AreaBreadcrumb</li>
    }

    @if (ViewBag.SubAreaBreadcrumb != null)
    {
        <li class="breadcrumb-item active">@ViewBag.SubAreaBreadcrumb</li>
    }

    @if (ViewBag.Breadcrumb != null)
    {
        <li class="breadcrumb-item">
            <a href="@Context.Request.Path">@ViewBag.Breadcrumb</a>
        </li>
    }

    @if (ViewBag.SubBreadcrumb != null)
    {
        <li class="breadcrumb-item active">@ViewBag.SubBreadcrumb</li>
    }

    <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
</ol>